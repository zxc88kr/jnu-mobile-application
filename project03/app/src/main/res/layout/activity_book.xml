<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/details0"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_margin="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:background="@drawable/book_bg"
        android:src="@drawable/book11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/smallbutton"
                android:drawableLeft="@drawable/cart"
                android:padding="5dp"
                android:text="장바구니담기"
                android:onClick="onClickAddCart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="도서ID : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="BOOK1234" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="도서명 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="자바 코딩의 기술"
                android:textStyle="bold"
                android:textColor="#00aaff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="정 가 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="22000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="출 간 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="2020-07-30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="지은이 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="사이먼 하러, 리스 디에츠, 요르그 레너드/심지현" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="분 량 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="264쪽" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="설 명 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="코딩 스킬을 개선하는 가장 좋은 방법은 전문가의 코드를 읽는 것이다. 오픈소스 코드를 읽으면서 이해하면 좋지만, 너무 방대하고 스스로 맥락을 찾는 게 어려울 수 있다. 그럴 땐 이 책처럼 현장에서 자주 발견되는 문제 유형 70가지와 해법을 비교하면서 자신의 코드에서 개선할 점을 찾는 것이 좋다." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="분 류 : "
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/details8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="프로그래밍/오픈소스" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>